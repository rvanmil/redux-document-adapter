{
  "name": "redux-document-adapter",
  "version": "1.0.0-rc.0",
  "description": "An entity adapter for Redux Toolkit, modified to be used with MongoDB Realm Documents",
  "author": "Ren√© van Mil <rvanmil@me.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rvanmil/redux-document-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/rvanmil/redux-document-adapter/issues"
  },
  "homepage": "https://github.com/rvanmil/redux-document-adapter#readme",
  "keywords": [
    "mongodb",
    "realm",
    "realm-js",
    "redux",
    "redux-document-adapter",
    "redux-toolkit",
    "toolkit",
    "bson",
    "ejson"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/redux-document-adapter.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "eslintConfig": {
    "extends": "prettier",
    "parser": "@typescript-eslint/parser"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "endOfLine": "auto"
  },
  "scripts": {
    "build": "rimraf dist && tsc && node scripts/cli.js",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint --ext js,ts,tsx src",
    "test": "jest"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts",
    "dist/**/package.json",
    "src/"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "bson": "^4.4.0",
    "convert-source-map": "^1.7.0",
    "esbuild": "^0.12.8",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.0.4",
    "merge-source-map": "^1.1.0",
    "prettier": "^2.3.1",
    "source-map": "^0.7.3",
    "terser": "^5.7.0",
    "tslib": "^2.3.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.0"
  },
  "peerDependencies": {
    "bson": "^4.4.0"
  },
  "peerDependenciesMeta": {
    "bson": {
      "optional": true
    }
  }
